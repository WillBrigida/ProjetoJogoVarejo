@inject HttpClient Http

<div class="flex-column text-center" style="margin : 10px auto 50px; width: 100%; position: absolute; bottom: 0;">
    <h4><span class="badge badge-pill " style="background:#d7d7d7;">@Fase</span></h4>
</div>

@code {
    [CascadingParameter] public string Fase { get; set; } = ". . .";
    [Parameter] public EventCallback<string> OnClick { get; set; }



    string fase = ". . .";

    protected override async Task OnInitializedAsync()
    {
        var respose = await Http.GetJsonAsync<GenericResult<JogoVarejo_Server.Shared.Models.Controle>>("api/v1/controle/");
        if (respose.Sucesso)
            Fase = $"Fase {respose.obj.Fase}";
        else
            Fase = $"Aguarde. . .";
    }
}
