@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <div class="top-row px-4">
                <LoginDisplay />
            </div>

            <div class="content px-4">
                @Body
            </div>
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="main">
            <div class="content px-4">
                @Body
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>



<style>
@@media (min-width: 768px) {
    .main {
        flex-direction: row;
    }

    .sidebar {
        width: 180px;
        height: 100vh;
        position: sticky;
        top: 0;
    }

</style>